{
  "name": "mijn-lessen-web",
  "description": "Mijn Lessen NextJs Web Server",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "git@github.com:vnglst/mijn-lessen-web.git",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "dotenv -e .env.test.local -- jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "bundlewatch": "bundlewatch",
    "lint": "eslint src/**/**.{tsx,ts}",
    "verify": "npm run lint; npm run test; npx rimraf .next; npm run build; npm run bundlewatch"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.2",
    "@chakra-ui/react": "^1.1.0",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@next/bundle-analyzer": "^10.0.4",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@types/howler": "^2.2.1",
    "framer-motion": "^3.1.1",
    "howler": "^2.2.1",
    "ky": "^0.25.1",
    "ky-universal": "^0.8.2",
    "lodash": "^4.17.20",
    "msw": "^0.24.4",
    "nanoid": "^3.1.20",
    "next": "^10.0.4",
    "next-google-fonts": "^1.2.1",
    "next-seo": "^4.17.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-lazyload": "^3.1.0",
    "react-quill": "^2.0.0-beta.2",
    "swr": "^0.3.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.17",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-lazyload": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "bundlewatch": "^0.3.1",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "4.1.3"
  },
  "bundlewatch": {
    "files": [
      {
        "path": ".next/static/chunks/commons*.js",
        "maxSize": "20kB"
      },
      {
        "path": ".next/static/chunks/framework*.js",
        "maxSize": "50kB"
      },
      {
        "path": ".next/static/chunks/main*.js",
        "maxSize": "10kB"
      },
      {
        "path": ".next/static/chunks/pages/_app*.js",
        "maxSize": "5kB"
      },
      {
        "path": ".next/static/css/*.css",
        "maxSize": "5kB"
      }
    ]
  }
}
